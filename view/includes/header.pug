span(id="header__modal--menu")
header(id="header" class='header container')
    nav(class='header__primary--nav')  
        img(class="header__menu--phone-icon" src="view/style/images/menu.png") 
        
        img(id="header__primary--nav-logo" src="view/style/images/image_default_48.png")   
       
        input(id="header__primary--nav-search" type="search" name="sitesearch" placeholder="procure no site")        
      
        select(class="header__primary--nav-mode" onchange="change_mode()")            
            option(value="daytime" selected) Modo Diurno                  
            option(value="nocturnal") Modo Noturno
            option(value="color-blind") Modo Daltônico  

        select(class="header__primary--nav-language" onchange="onload()")            
            option(value="pt-br" selected) Portugues
            option(value="en-us") English         

    nav(class='header__secondary--nav header__menu--phone-hide')
        a(id="header__secondary--nav-about" class="header__secondary--nav-option" href="#")            
        br(class="header__menu--phone-break_line" class="header__secondary--nav-option" )   

        a(id="header__secondary--nav-services" class="header__secondary--nav-option"  href="#")            
        br(class="header__menu--phone-break_line")   

        a(id="header__secondary--nav-courses" class="header__secondary--nav-option"  href="#")            
        br(class="header__menu--phone-break_line")   

        a(id="header__secondary--nav-blog" class="header__secondary--nav-option"  href="#")            
        br(class="header__menu--phone-break_line")  

        a(id="header__secondary--nav-faq" class="header__secondary--nav-option"  href="#")            
        br(class="header__menu--phone-break_line")  

        label compartilhe no:               
        br(class="header__menu--phone-break_line") 
        
        img(
            id="header__secondary--nav-share_facebook" 
            alt="botão de compartilhamento dos serviços do site no facebook" 
            src="view/style/images/icons/facebook_blue.svg"
            width="35")

        img(
            id="header__secondary--nav-share_twitter" 
            alt="botão de compartilhamento dos serviços do site no twitter" 
            src="view/style/images/icons/twitter_black.svg"
            width="35")

        img(
            id="header__secondary--nav-share_google_plus" 
            alt="botão de compartilhamento dos serviços do site no site de relacionamentos Google Mais" 
            src="view/style/images/icons/google_plus-red.svg"
            width="35")
